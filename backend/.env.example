# Environment variables for Notes API
# Copy to .env and fill in secure values
PORT=3000
# For quick demo without installing MongoDB, use in-memory DB:
MONGO_URI=memory
# Or connect to local MongoDB:
# MONGO_URI=mongodb://localhost:27017/notesapp
JWT_SECRET=super-secret-change-me
JWT_EXPIRES_IN=7d
# Optional Redis (Bonus caching)
# REDIS_URL=redis://localhost:6379
